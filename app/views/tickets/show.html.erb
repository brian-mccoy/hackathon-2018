<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="row">
        <div class="col-md-6">
          <h2><%= @ticket.title  %></h2>
        </div>
        <div class="col-md-6">

          <%= link_to 'Edit', edit_ticket_path(@ticket) %>

          <%= link_to 'Delete', ticket_path(@ticket),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>

        </div>
      </div>


      <hr>

      <%= @ticket.description %>

      <hr>

      <h3>Ticket Details</h3>

      <% if @assignee %>
        <p>
          <strong>Assignee:</strong>
          <%= @assignee.email %>
        </p>
      <% end %>

    </div>
  </div>
</div>
